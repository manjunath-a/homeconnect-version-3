<config>
    <modules>
        <Simi_Connector>
            <version>0.2.0</version>
        </Simi_Connector>
    </modules>
    <frontend>
        <routers>
            <connector>
                <use>standard</use>
                <args>
                    <module>Simi_Connector</module>
                    <frontName>connector</frontName>
                </args>
            </connector>
        </routers>
        <layout>
            <updates>
                <connector>
                    <file>connector.xml</file>
                </connector>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Connector>
                    <files>
                        <default>Simi_Connector.csv</default>
                    </files>
                </Simi_Connector>
            </modules>
        </translate>
        <events>
            <payment_method_is_active>
                <observers>
                    <simipayment_bank_observers>
                        <type>singleton</type>
                        <class>connector/observer</class>
                        <method>paymentMethodIsActive</method>
                    </simipayment_bank_observers>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>
    <admin>
        <routers>
            <connectoradmin>
                <use>admin</use>
                <args>
                    <module>Simi_Connector</module>
                    <frontName>connectoradmin</frontName>
                </args>
            </connectoradmin>
        </routers>		
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <connector>
                    <file>connector.xml</file>
                </connector>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Connector>
                    <files>
                        <default>Simi_Connector.csv</default>
                    </files>
                </Simi_Connector>
            </modules>
        </translate>		
    </adminhtml>   
    <global>
        <models>
            <connector>
                <class>Simi_Connector_Model</class>
                <resourceModel>connector_mysql4</resourceModel>
            </connector>
            <connector_mysql4>
                <class>Simi_Connector_Model_Mysql4</class>
                <entities>
                    <payment>
                        <table>connector_payment</table>
                    </payment>
                    <design>
                        <table>connector_design</table>
                    </design>
                    <device>
                        <table>connector_device</table>
                    </device>
                    <banner>
                        <table>connector_banner</table>
                    </banner>                  
                    <app>
                        <table>connector_app</table>
                    </app>
                    <plugin>
                        <table>connector_plugin</table>
                    </plugin>
                    <key>
                        <table>connector_key</table>
                    </key>
                    <notice>
                        <table>connector_notice</table>
                    </notice>
                    <cms>
                        <table>connector_cms</table>
                    </cms>
                </entities>
            </connector_mysql4>
        </models>
        <resources>
            <connector_setup>
                <setup>
                    <module>Simi_Connector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </connector_setup>
            <connector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </connector_write>
            <connector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </connector_read>
        </resources>
        <blocks>
            <connector>
                <class>Simi_Connector_Block</class>
            </connector>
        </blocks>
        <helpers>
            <connector>
                <class>Simi_Connector_Helper</class>
            </connector>
        </helpers>
        <events>
            <connector_checkout_get_order_config_total>
                <observers>
                    <connector_checkout_get_order_config_total_condition>
                        <class>connector/observer</class>
                        <method>addCondition</method>
                    </connector_checkout_get_order_config_total_condition>
                </observers>
            </connector_checkout_get_order_config_total>
            <connector_customer_get_profile_detail>
                <observers>
                    <connector_customer_get_profile_detail_edit>
                        <class>connector/observer</class>
                        <method>editProfile</method>
                    </connector_customer_get_profile_detail_edit>
                </observers>
            </connector_customer_get_profile_detail>
			<connector_catalog_get_product_detail_product_detail>
                <observers>
                    <add_other_info_observers>
                        <class>connector/observer</class>
                        <method>addOtherInfo</method> 
                    </add_other_info_observers>
                </observers>
            </connector_catalog_get_product_detail_product_detail>
        </events>      
        
    </global>  
    <default>                
        <connector>
            <check_first>0</check_first>
            <android_key>AIzaSyAi4qYNCgQ13VPDRtE_GYa0Bw7ZH-Ix5NU</android_key>
            <android_sendid>518903118242</android_sendid>
            <general>                                               
                <enable>1</enable>
				<is_show_price_zero>1</is_show_price_zero>
				<is_show_all_product>1</is_show_all_product>
				<cms_shipping_condition></cms_shipping_condition>
            </general>           
        </connector>  
        <payment>           
            <transfer_mobile>
                <active>0</active>    
                <title>Bank Transfer Mobile</title>
                <model>connector/payment_transfer</model>     
                <order_status>pending</order_status>     
            </transfer_mobile>
        </payment>              
    </default>
</config>
