                    <params>0</params>
                </action>                
            </block>
            <block type="connector/adminhtml_key" name="connector_key" tempale="simi/connector/key/key.phtml"/>
            <block type="connector/adminhtml_connector" name="connector" />
        </reference>
    </connectoradmin_adminhtml_connector_index>
    
