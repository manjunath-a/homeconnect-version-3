	'<?php echo Mage::helper('bookme')->__('booked nearest in') ?> <input style="width:50px" type="text" id="price_rule_{{index}}_qty" name="<?php echo $_htmlName ?>[{{index}}][qty]" value="{{qty}}">'+
	'<select id="price_rule_{{index}}_qtytype" name="<?php echo $_htmlName ?>[{{index}}][qtytype]">'+
