<?xml version="1.0" ?>
<layout>

<default>
		<reference name="head">
			<action method="addItem"><type>js</type><name>bookme_calendar/pikaday.js</name><params/></action>
			<action method="addItem"><type>js_css</type><name>bookme_calendar/pikaday.css</name><params/></action>
			<action method="addItem"><type>js</type><name>bookme_calendar/jstz-1.0.4.min.js</name><params/></action>
		</reference>
	</default>
<!--
Product view
-->

    <catalog_product_view>
    	<reference name="product.info.options">
    		<action method="addOptionRenderer"><type>multidate</type><block>bookme/adminhtml_catalog_product_view_options_type_multidate</block><template>vdesign_bookme/options/type/multidate.phtml</template></action>
    	</reference>
    </catalog_product_view>
    
    <PRODUCT_TYPE_booking translate="label" module="catalog">
        <label>Catalog Product View (Booking)</label>
        <reference name="product.info">
            <block type="catalog/product_view_type_simple" name="product.info.simple" as="product_type_data" template="catalog/product/view/type/default.phtml">
                <block type="core/text_list" name="product.info.simple.extra" as="product_type_data_extra" translate="label">
                    <label>Product Extra Info</label>
                </block>
            </block>
        </reference>
    </PRODUCT_TYPE_booking>
    
    <!--
Email layouts section
-->
    <sales_email_order_items>
        <reference name="items">
            <action method="addItemRender"><type>booking</type><block>bookme/order_email_items_order_booking</block><template>email/order/items/order/default.phtml</template></action>
        </reference>
    </sales_email_order_items>

    <sales_email_order_invoice_items>
		<reference name="items">
            <action method="addItemRender"><type>booking</type><block>bookme/order_email_items_booking</block><template>email/order/items/invoice/default.phtml</template></action>
        </reference>
    </sales_email_order_invoice_items>

    <sales_email_order_shipment_items>
        <reference name="items">
            <action method="addItemRender"><type>booking</type><block>bookme/order_email_items_booking</block><template>email/order/items/shipment/default.phtml</template></action>
        </reference>
    </sales_email_order_shipment_items>

    <sales_email_order_creditmemo_items>
        <reference name="items">
            <action method="addItemRender"><type>booking</type><block>bookme/order_email_items_booking</block><template>email/order/items/creditmemo/default.phtml</template></action>
        </reference>
    </sales_email_order_creditmemo_items>
    
	
</layout>

