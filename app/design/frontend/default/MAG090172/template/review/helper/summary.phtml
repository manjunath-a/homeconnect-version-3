        <p class="rating-links">
            <a itemprop="reviewCount" onclick="review_tab_show()" rel="nofollow" href="#product_tabs_review_tabbed"><span class="count"><?php echo $this->__('%d', $this->getReviewsCount()) ?></span><?php echo $this->__(' Review(s)') ?></a>
            <span class="separator">|</span>
            <a rel="nofollow" onclick="review_tab_show()" href="#product_tabs_review_tabbed"><?php echo $this->__('Add Your Review') ?></a>
        </p>
