<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>

<div class="product-image-wrap device">
    <a class="arrow-left" href="#"></a> 
    <a class="arrow-right" href="#"></a>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <a href="<?php echo $this->getGalleryUrl() ?>" title="<?php echo $this->escapeHtml($this->getImageLabel()) ?>">
                    <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(290); ?>" 
                         width="100" height="100" alt="<?php echo $this->escapeHtml($this->getImageLabel()) ?>" />
                </a>
            </div>
            <?php if (count($this->getGalleryImages()) > 0): ?>
                <?php foreach ($this->getGalleryImages() as $_image): ?>
                    <div class="swiper-slide">
                        <a href="<?php echo $this->getGalleryUrl($_image) ?>" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>">
                            <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(290); ?>" 
                                 width="100" height="100" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
                        </a>
                    </div>
                <?php endforeach; ?>
            <?php endif; ?>
        </div>
    </div>
</div>
<script>
    var mySwiper = new Swiper('.device .swiper-container',{
        loop:true,
        grabCursor: true,
    })
    jQuery('.arrow-left').on('click', function(e){
        e.preventDefault()
        mySwiper.swipePrev()
    })
    jQuery('.arrow-right').on('click', function(e){
        e.preventDefault()
        mySwiper.swipeNext()
    })
</script>

