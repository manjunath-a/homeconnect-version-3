<?php $count_upsells = count($this->getItemCollection()->getItems());?>
<?php if ($count_upsells): ?>
    <div class="box-collateral box-up-sell">
        <div class="box-title">
            <h3><?php echo $this->__('You May Also Like') ?></h3>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <?php $this->resetItemsIterator() ?>
                <?php for ($_i = 0; $_i < $this->getRowCount(); $_i++): ?>
                    <?php for ($_j = 0; $_j < $this->getColumnCount(); $_j++): ?>
                        <?php if ($_link = $this->getIterableItem()): ?>
                            <div class="swiper-slide">
                                <a href="<?php echo $_link->getProductUrl() ?>" class="product-image ui-link" >
                                    <img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(135) ?>" width="85" height="85" 
                                         alt="<?php echo $this->escapeHtml($_link->getName()) ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>">
                                </a>
                                <div class="content-slide" style="width: 90%;">
                                    <p class="title">
                                        <a href="<?php echo $_link->getProductUrl() ?>" class="ui-link">
                                            <?php echo $this->escapeHtml($_link->getName()) ?>
                                        </a>
                                    </p>
                                    <p class="upsell-price">
                                        <?php echo Mage::helper('core')->currency($_link->getPrice()); ?>
                                    </p>
                                </div>
                            </div>
                        <?php endif; ?>
                    <?php endfor; ?>
                <?php endfor; ?>                    
            </div>
            <div class="pagination"></div>
        </div>
    </div>
    <?php endif
?>

<script>
    <?php if($count_upsells){?>
    var mySwiper1 = jQuery('.box-up-sell .swiper-container').swiper({
        loop: true,
        pagination: '.pagination',
        paginationClickable: true,
        grabCursor: true,
        slidesPerView: <?php if($count_upsells == 1) echo '1'; else echo '2';?>
    });
    <?php }?>
</script>